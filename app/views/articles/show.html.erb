<div class="container">
  <div id="title-box">
    <h1 class="mt-4 mb-4"><%= @article.title %></h1>
    <div id="icons">
    <%= link_to edit_article_path do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete?"} do %>
      <i class="fas fa-trash-alt" id="delete"></i>
    <% end %>
    </div>
  </div>
  <hr>
  <p><%= @article.content %></p>
</div>
